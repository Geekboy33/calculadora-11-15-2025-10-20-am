{
  "name": "@daes/bank-settlement",
  "version": "1.0.0",
  "description": "DAES Bank Settlement Module - Clean Architecture",
  "main": "api/server.ts",
  "scripts": {
    "dev": "tsx watch api/server.ts",
    "build": "tsc",
    "start": "node dist/api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "node infrastructure/database/run-migrations.js",
    "db:seed": "node infrastructure/database/run-seeds.js"
  },
  "keywords": [
    "bank-settlement",
    "core-banking",
    "clean-architecture",
    "typescript"
  ],
  "author": "DAES CoreBanking Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "domain/**/*.ts",
      "application/**/*.ts",
      "!**/*.test.ts"
    ]
  }
}

