{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.ledgerdaes.terminal",
  "productName": "LedgerDAESTerminal",
  "copyright": "Copyright Â© 2025 DAES - Data and Exchange Settlement",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "asar": true,
  "compression": "maximum",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "ledgerdaesterminal-${version}-win-${arch}.${ext}",
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "LedgerDAESTerminal",
    "differentialPackage": true,
    "runAfterFinish": true,
    "license": "LICENSE",
    "language": "1034"
  },
  "portable": {
    "artifactName": "ledgerdaesterminal-${version}-portable.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64"]
      }
    ],
    "artifactName": "ledgerdaesterminal-${version}-mac-${arch}.${ext}",
    "category": "public.app-category.finance"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "artifactName": "ledgerdaesterminal-${version}-linux-${arch}.${ext}",
    "category": "Finance"
  },
  "publish": {
    "provider": "github",
    "owner": "Geekboy33",
    "repo": "calculadora-11-15-2025-10-20-am"
  }
}

